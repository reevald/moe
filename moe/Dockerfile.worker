# Dockerfile for MOE Worker Service
# Optimized for Celery worker with LLM dependencies

FROM python:3.12-slim

LABEL maintainer="MOE Team"
LABEL service="worker"

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update \
    && apt-get install -y --no-install-recommends \
        gcc \
        postgresql-client \
    && rm -rf /var/lib/apt/lists/*

COPY pyproject.toml /app/

# Install Python dependencies
RUN pip install --no-cache-dir poetry \
    && poetry config virtualenvs.create false \
    && poetry install --only main,worker --no-root \
    --no-interaction

# Copy only required directories for Worker service
COPY common/ /app/common/
COPY modules/ /app/modules/
COPY worker/ /app/worker/

# Create non-root user
RUN useradd -m -u 1000 moeworker \
    && chown -R moeworker:moeworker /app

USER moeworker

# Run Celery worker
CMD ["celery", "-A", "worker.celery_app", "worker", \
     "--loglevel=info", \
     "--concurrency=2"]
